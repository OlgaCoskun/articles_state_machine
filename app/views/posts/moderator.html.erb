<p id="notice"><%= notice %></p>

<h1>Посты на модерации</h1>

<% @posts.each do |post| %>

  <% if post.state == 'moderator' %>

    <p><%= post.title %></p>
    <p><%= post.body %></p>
    <p>Статус - <%= post.state %></p>

    <table>
      <tbody>
      <tr>
        <td><%= link_to 'Show', post_path(post) %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Publish', send_to_publish_post_path(post), method: :patch %>
        </td>
      </tr>
      </tbody>
    </table>
    <br>
  <% end %>
<% end %>